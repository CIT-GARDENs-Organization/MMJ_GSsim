<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MMJ_GSsim.Front.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MMJ_GSsim"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="MMJ Ground Station Simulator">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Connection Controls Panel -->
        <Border Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Margin="10">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Radio Selection -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="無線機:" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold"/>
                <ComboBox x:ConnectionId='5' x:Name="RadioTypeComboBox" 
                          Grid.Row="0" Grid.Column="1" 
                          HorizontalAlignment="Stretch"
                          PlaceholderText="無線機を選択">
                    <ComboBoxItem Content="YAESU"/>
                    <ComboBoxItem Content="ICOM"/>
                    <ComboBoxItem Content="DummyRadio"/>
                </ComboBox>

                <!-- Radio COM Port -->
                <TextBlock Grid.Row="0" Grid.Column="3" Text="無線機COMポート:" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold"/>
                <ComboBox x:ConnectionId='6' x:Name="RadioComPortComboBox" 
                          Grid.Row="0" Grid.Column="4" 
                          HorizontalAlignment="Stretch"
                          PlaceholderText="COMポートを選択"/>

                <!-- TNC Selection -->
                <TextBlock Grid.Row="0" Grid.Column="6" Text="TNC:" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold"/>
                <ComboBox x:ConnectionId='7' x:Name="TncTypeComboBox" 
                          Grid.Row="0" Grid.Column="7" 
                          HorizontalAlignment="Stretch"
                          PlaceholderText="TNCを選択">
                    <ComboBoxItem Content="Kantronics"/>
                    <ComboBoxItem Content="GS_Sim"/>
                </ComboBox>

                <!-- TNC COM Port -->
                <TextBlock Grid.Row="0" Grid.Column="9" Text="TNC COMポート:" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold"/>
                <ComboBox x:ConnectionId='8' x:Name="TncComPortComboBox" 
                          Grid.Row="0" Grid.Column="10" 
                          HorizontalAlignment="Stretch"
                          PlaceholderText="COMポートを選択"/>

                <!-- Connect Button -->
                <Button x:ConnectionId='9' x:Name="ConnectButton" 
                        Grid.Row="0" Grid.Column="12" 
                        Content="接続" 
                        HorizontalAlignment="Center"
                        MinWidth="80"
                        Style="{StaticResource AccentButtonStyle}"/>

                <!-- Status indicators -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="13" 
                            Orientation="Horizontal" 
                            Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <Ellipse x:ConnectionId='11' x:Name="RadioStatusIndicator" 
                                 Width="12" Height="12" 
                                 Fill="Gray"/>
                        <TextBlock Text="無線機" FontSize="12"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <Ellipse x:ConnectionId='10' x:Name="TncStatusIndicator" 
                                 Width="12" Height="12" 
                                 Fill="Gray"/>
                        <TextBlock Text="TNC" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Communication History -->
        <Border Grid.Row="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Margin="10,0,10,10">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="通信履歴" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1" 
                              ZoomMode="Disabled" 
                              HorizontalScrollMode="Auto" 
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <TextBox x:ConnectionId='4' x:Name="CommunicationHistoryTextBox"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"
                             FontSize="12"
                             Background="Transparent"
                             BorderThickness="0"
                             MinHeight="200"
                             PlaceholderText="通信履歴がここに表示されます..."/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Margin="10,0,10,10">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="制御パネル" 
                           FontSize="16" 
                           FontWeight="SemiBold"/>

                <!-- Hex Data Input Section -->
                <Border Grid.Row="2" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                                   Text="16進数データ送信 (最大12バイト)" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"/>

                        <TextBox x:ConnectionId='2' x:Name="HexDataTextBox" 
                                 Grid.Row="2" Grid.Column="0"
                                 PlaceholderText="例: 01 02 03 04 (スペース区切り)"
                                 FontFamily="Consolas"
                                 MaxLength="35"
                                                                         />

                        <Button x:ConnectionId='3' x:Name="SendDataButton" 
                                Grid.Row="2" Grid.Column="2"
                                Content="送信" 
                                MinWidth="80"
                                                            
                                IsEnabled="False"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>

